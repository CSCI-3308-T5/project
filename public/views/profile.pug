extends layout.pug

append head
	title Game Connect - Profile
block content
	.row
	h2.
		#{username} 

	.row(style="position:relative; margin-top: 7%")
		h4 Games You've Reviewed:
	.row
		h5 <br><u>Name of Game You've Rated Number One</u>
	<div class="rate" style="position:relative; left: 40%; top: -45px;">
		<input type="radio" id="star5" name="GameNumberOneName" value="5" />
