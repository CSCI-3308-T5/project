		<input type="radio" id="star4" name="GameNumberOneName" value="4" />
		<label for="star4" title="text">4 stars</label>
		<input type="radio" id="star3" name="GameNumberOneName" value="3" />
		<label for="star3" title="text">3 stars</label>
		<input type="radio" id="star2" name="GameNumberOneName" value="2" />
		<label for="star2" title="text">2 stars</label>
		<input type="radio" id="star1" name="GameNumberOneName" value="1" />
		<label for="star1" title="text">1 star</label>
	</div>	
	.row
	h5 <br><u>Game Number Two</u>
	<div class="rate" name="Game2" style="position:relative; left: 40%; top: -45px;">
		<input type="radio" id="star5" name="GameNumberTwoName" value="5" />
		<label for="star5" title="text">5 stars</label>
		<input type="radio" id="star4" name="GameNumberTwoName" value="4" />
		<label for="star4" title="text">4 stars</label>
		<input type="radio" id="star3" name="GameNumberTwoName" value="3" />
		<label for="star3" title="text">3 stars</label>
		<input type="radio" id="star2" name="GameNumberTwoName" value="2" />
		<label for="star2" title="text">2 stars</label>
		<input type="radio" id="star1" name="GameNumberTwoName" value="1" />
		<label for="star1" title="text">1 star</label>
	</div>	
